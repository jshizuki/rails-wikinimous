<div class="container">
  <h1>ALL ARTICLES</h1>
  <hr>
  <% @articles.each_with_index do |article, index| %>
  <h2><%= "#{index + 1}) " %><%= link_to article.title, article_path(article), class: "text-decoration-none" %></h2>
  <% end %>
  <%= link_to "Add a new article", new_article_path, class: "btn btn-info btn-lg mt-2" %>
</div>
